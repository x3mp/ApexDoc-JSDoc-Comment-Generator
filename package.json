{
    "name": "apexdoc-jsdoc",
    "displayName": "ApexDoc & JSDoc Comment Generator",
    "description": "A lightweight Visual Studio Code extension to automatically generate documentation comments for Apex and JavaScript/TypeScript files.",
    "version": "0.1.2",
    "publisher": "x3mp",
    "license": "MIT",
    "engines": {
        "vscode": "^1.103.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/x3mp/ApexDoc-JSDoc-Comment-Generator"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:apex",
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "apexdoc.generate",
                "title": "Generate ApexDoc/JSDoc comment"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "apexdoc.generate",
                    "when": "editorLangId == apex || editorLangId == javascript || editorLangId == typescript",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/node": "^18.19.122",
        "@types/vscode": "^1.60.0",
        "typescript": "^4.0.0",
        "vsce": "^2.15.0",
        "vscode": "^1.1.37"
    }
}
